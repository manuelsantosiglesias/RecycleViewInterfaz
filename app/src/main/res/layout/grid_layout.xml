        android:layout_below="@+id/imageView"
        android:height="64dp"
        android:ems="10"
        android:fontFamily="sans-serif-smallcaps"
        android:padding="10dp"
        android:text="iluminaciÃ³n"
        android:textAlignment="center"
        android:textSize="14dp"
